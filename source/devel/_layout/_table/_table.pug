mixin _table(text, color)
    table.table.table-hover.table-sm.table-striped1&attributes(attributes)
        thead.thead-dark
            tr
                th(scope='col' class="text-"+color)= text
        tbody
            - var n = 0;
            while n < 10
                - n++
                tr
                    td(class="text-"+color)= text + ' - ' + n
                        span.badge.badge-danger.badge-pill X
